<section het-pane="main" class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <p id="main-content" class="text-muted">Main content.</p>
    <a
      id="multi-link"
      href="/requests/links/het-also/responses/multi"
      het-target="main"
      het-also="sidebar footer"
    >
      Update main + sidebar + footer
    </a>
  </div>
</section>
<aside id="sidebar" class="card shadow-sm border-0 mt-3">
  <div class="card-body">
    <p>Sidebar content.</p>
  </div>
</aside>
<footer id="footer" class="card shadow-sm border-0 mt-3">
  <div class="card-body">
    <p>Footer content.</p>
  </div>
</footer>

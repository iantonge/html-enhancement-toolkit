<section het-pane="main" class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <form id="form" method="get" action="/requests/forms/disables-in-flight/child-target" het-target="child">
      <div class="mb-2">
        <input id="field" type="text" name="child-field" value="child value" class="form-control" />
      </div>
    </form>
    <div class="mt-3">
      <input
        id="associated-field"
        type="text"
        name="child-associated-field"
        value="associated value"
        form="form"
        class="form-control"
      />
    </div>
    <button
      id="associated-submit"
      type="submit"
      form="form"
      class="btn btn-outline-secondary mt-2"
    >
      Associated submit
    </button>
  </div>
</section>
<section het-pane="child" class="card shadow-sm border-0 mt-3">
  <div class="card-body">
    <p id="child-content">Original child content.</p>
  </div>
</section>

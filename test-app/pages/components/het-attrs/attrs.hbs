<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="het-attrs-basic">
      <button id="set-status" type="button" het-on="click=setReady">Set ready</button>
      <p id="status-target" het-attrs="data-status=status" class="mb-0 text-muted">Status target</p>
    </div>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('het-attrs-basic', {
    setup: ({ signals }) => {
      signals.status = window.HET.signal('idle');
      return {
        setReady: () => {
          signals.status.value = 'ready';
        },
      };
    },
  });
</script>

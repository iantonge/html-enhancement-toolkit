<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="het-on-invokes">
      <button id="increment-button" type="button" het-on="click=increment">Increment</button>
      <p id="count-value" class="mb-0 text-muted">0</p>
    </div>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('het-on-invokes', {
    setup: () => {
      let count = 0;
      return {
        increment: () => {
          count += 1;
          document.getElementById('count-value').textContent = String(count);
        },
      };
    },
  });
</script>

<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="het-on-multiple">
      <button
        id="multi-handler-button"
        type="button"
        het-on="click=incrementA click=incrementB">
        Run both
      </button>
      <p id="count-a" class="mb-0 text-muted">0</p>
      <p id="count-b" class="mb-0 text-muted">0</p>
    </div>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('het-on-multiple', {
    setup: () => {
      let countA = 0;
      let countB = 0;
      const render = () => {
        document.getElementById('count-a').textContent = String(countA);
        document.getElementById('count-b').textContent = String(countB);
      };
      return {
        incrementA: () => {
          countA += 1;
          render();
        },
        incrementB: () => {
          countB += 1;
          render();
        },
      };
    },
  });
</script>

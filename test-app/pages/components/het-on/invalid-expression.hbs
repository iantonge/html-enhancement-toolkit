<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="het-on-invalid">
      <button id="invalid-expression-button" type="button" het-on="click">Run</button>
    </div>
    <p id="error-message" class="mb-0 text-muted">No error</p>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('het-on-invalid', {
    setup: () => ({
      click: () => {},
    }),
  });
  window.addEventListener('load', () => {
    const message = window.hetErrors.at(-1);
    if (message) {
      document.getElementById('error-message').textContent = message;
    }
  });
</script>

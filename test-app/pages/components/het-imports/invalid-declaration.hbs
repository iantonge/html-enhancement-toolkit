<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="imports-invalid" het-imports="local=source=extra">
      <p class="mb-0 text-muted">Invalid declaration scenario</p>
    </div>
    <p id="error-message" class="mb-0 mt-3 text-muted">No error</p>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('imports-invalid', {
    setup: () => ({}),
  });

  window.addEventListener('load', () => {
    const message = window.hetErrors.at(-1);
    if (message) {
      document.getElementById('error-message').textContent = message;
    }
  });
</script>

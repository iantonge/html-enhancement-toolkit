<section class="card shadow-sm border-0">
  <div class="card-body">
    <h1 class="h4 mb-3">{{title}}</h1>
    <div het-component="het-model-radio">
      <div class="form-check">
        <input
          id="choice-radio"
          type="radio"
          name="choice"
          het-model="isChosen"
          class="form-check-input">
        <label class="form-check-label" for="choice-radio">Chosen</label>
      </div>
      <p id="chosen-value" het-props="textContent=isChosen" class="mt-2 mb-0 text-muted"></p>
      <button id="set-chosen" type="button" het-on="click=setChosen" class="btn btn-sm btn-primary mt-2">
        Set true from signal
      </button>
    </div>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.HET.registerComponent('het-model-radio', {
    setup: ({ signals }) => {
      signals.isChosen = window.HET.signal(false);
      return {
        setChosen: () => {
          signals.isChosen.value = true;
        },
      };
    },
  });
</script>

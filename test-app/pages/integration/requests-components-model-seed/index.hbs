<section id="main-pane" het-pane="main" class="card shadow-sm border-0">
  <div class="card-body">
    <h1 id="seed-title" class="h4 mb-3">{{title}}</h1>
    <div id="integration-model-seed" het-component="integration-model-seed">
      <input id="seed-input" class="form-control" het-model="query:seed" value="alpha">
      <p id="seed-value" het-props="textContent=query" class="mt-2 text-muted mb-3"></p>
    </div>
    <p id="error-message" class="text-muted mb-3">No error</p>
    <a
      id="load-seed-response"
      href="/integration/requests-components-model-seed/response"
      het-target="main"
      class="btn btn-sm btn-primary">
      Load model seed response
    </a>
  </div>
</section>
<script nonce="{{{cspNonce}}}">
  window.hetInitConfig = {
    replaceContent: (currentEl, replacementEl) => {
      Idiomorph.morph(currentEl, replacementEl);
      return currentEl;
    }
  };

  window.HET.registerComponent('integration-model-seed', {
    setup: () => ({}),
  });

  document.addEventListener('het:afterLoadContent', () => {
    const message = window.hetErrors.at(-1);
    if (message) {
      document.getElementById('error-message').textContent = message;
    }
  });
</script>
